    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "game",
    "three.js",
    "typescript",
    "crafting",
    "incremental"
  ],
  "author": "adam4813",
  "license": "MIT",
  "dependencies": {
    "three": "^0.169.0"
  },
  "devDependencies": {
    "@types/three": "^0.169.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "5.9.3",
    "vite": "^6.0.2"
  }
}
